<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mohamed.myapplication.TaskSwipeFragment">

    <FrameLayout
        android:id="@+id/frameLayout_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_empty_pending_task">

        <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_margin="16dp"
            android:background="@drawable/book_btn_background"
            android:text="post a task"
            android:textColor="@android:color/white" />
    </FrameLayout>

</FrameLayout>
